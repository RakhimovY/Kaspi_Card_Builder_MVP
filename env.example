# Database
DATABASE_URL="postgresql://username:password@localhost:5432/trade_card_builder"

# NextAuth
NEXTAUTH_SECRET="your-32-character-secret-here"
# Use ngrok URL for development with ngrok
NEXTAUTH_URL="https://abbcfd0cdc8e.ngrok-free.app"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Billing Provider (choose one)
BILLING_PROVIDER="lemon-squeezy" # or "paddle" or "polar"

# Lemon Squeezy
# Получите эти значения в настройках вашего магазина на https://app.lemonsqueezy.com
LEMON_SQUEEZY_WEBHOOK_SECRET="your-webhook-secret"
LEMON_SQUEEZY_API_KEY="your-api-key"
# Product ID - ID продукта из URL вашего продукта в Lemon Squeezy
NEXT_PUBLIC_LEMON_SQUEEZY_PRODUCT_ID="your-product-id"
# Variant ID - ID варианта продукта (обычно тот же, что и Product ID для простых продуктов)
NEXT_PUBLIC_LEMON_SQUEEZY_VARIANT_ID="your-variant-id"

# Paddle
PADDLE_WEBHOOK_SECRET="your-webhook-secret"
PADDLE_API_KEY="your-api-key"

# Polar
POLAR_WEBHOOK_SECRET="your-webhook-secret"
POLAR_API_KEY="your-api-key"

# OpenAI
OPENAI_API_KEY="your-openai-api-key"
# OpenAI Model (gpt-3.5-turbo, gpt-4, gpt-4-turbo, gpt-4o)
OPENAI_MODEL="gpt-4o-mini"

# GTIN Provider (choose one)
GTIN_PROVIDER="upcitemdb" # or "barcodelookup"

# UPCitemdb (Free: 100 requests/day, Paid: $99/month for 20k requests/day)
# Get free API key at https://devs.upcitemdb.com/
UPCITEMDB_USER_KEY="your-upcitemdb-user-key"

# Barcode Lookup (Alternative provider)
BARCODE_LOOKUP_API_KEY="your-barcode-lookup-api-key"

# Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN="tradecardbuilder.kz"

# App
NODE_ENV="development"
LOG_LEVEL="info"